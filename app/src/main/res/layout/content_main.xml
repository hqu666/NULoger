        <!--android:name="com.example.hkuwayama.nuloger.MainFragment"-->
        <!--android:layout_width="384dp"-->
        <!--android:layout_height="511dp"-->
        <!--tools:layout="@layout/fragment_main" />-->
</android.support.constraint.ConstraintLayout>
